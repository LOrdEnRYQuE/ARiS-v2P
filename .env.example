# =============================================================================
# ARiS Enterprise Platform - Environment Configuration
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL (Supabase recommended)
DATABASE_URL=postgresql://username:password@host:port/database

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration (Alternative AI Provider)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=aris-embeddings

# Supabase Vector (Alternative)
SUPABASE_VECTOR_ENABLED=false

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Settings
NEXT_PUBLIC_APP_URL=https://your-domain.com
NODE_ENV=production
PORT=3000

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key
JWT_EXPIRES_IN=7d

# =============================================================================
# ENTERPRISE FEATURES
# =============================================================================

# Security & Compliance
ENABLE_AUDIT_LOGGING=true
ENABLE_RBAC=true
ENABLE_COMPLIANCE_MODE=true
ENABLE_DATA_ENCRYPTION=true

# Performance & Scaling
ENABLE_CACHING=true
ENABLE_AUTO_SCALING=true
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000

# Monitoring & Analytics
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker Configuration
DOCKER_IMAGE_NAME=aris-enterprise
DOCKER_TAG=latest

# Kubernetes Configuration
K8S_NAMESPACE=aris
K8S_REPLICAS=3

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Email Service (SendGrid, AWS SES, etc.)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key

# File Storage (AWS S3, Google Cloud Storage, etc.)
STORAGE_PROVIDER=aws
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=aris-storage

# Monitoring Services
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Settings (override in production)
DEBUG=false
LOG_LEVEL=info
ENABLE_HOT_RELOAD=false

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent Settings
AGENT_TIMEOUT=60000
AGENT_MAX_RETRIES=3
AGENT_CONCURRENT_LIMIT=10

# RAG System Configuration
RAG_CHUNK_SIZE=1000
RAG_OVERLAP_SIZE=200
RAG_SIMILARITY_THRESHOLD=0.7

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# COMPLIANCE & GOVERNANCE
# =============================================================================

# Data Retention
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555

# Privacy Controls
ENABLE_GDPR_COMPLIANCE=true
ENABLE_DATA_MASKING=true
ENABLE_ANONYMIZATION=true 